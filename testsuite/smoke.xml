			<class name="google.Calculator.tests.CalculatorBasicTest" />
		</classes>
	</test> <!--
	Test -->

	<test thread-count="5" name="Calculator Advanced Test">
		<classes>
			<class name="google.Calculator.tests.CalculatorAdvancedTest" />
		</classes>
	</test>
	
</suite> <!-- Suite -->
